<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".snacker.builtIn.SnackerBuiltInDSLActivity">

    <include
        android:id="@+id/toolbarExample"
        layout="@layout/toolbar_example" />

    <Button
        android:id="@+id/launchSnackbarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_rounded_16"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/anonymous_bold"
        android:paddingHorizontal="16dp"
        android:text="Launch Snackbar"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarExample" />

</androidx.constraintlayout.widget.ConstraintLayout>