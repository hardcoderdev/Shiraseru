<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/exampleTitleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backIconImageView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:fontFamily="@font/anonymous_bold"
        android:text="Toast Core"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="32dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/shape_rounded_16"
        android:backgroundTint="@color/black"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/backIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/exampleTitleButton"
        app:layout_constraintBottom_toBottomOf="@id/exampleTitleButton"
        android:padding="16dp"
        android:src="@drawable/ic_back"
        android:background="@drawable/shape_rounded_16"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>